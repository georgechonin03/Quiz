<h3>Quiz</h3>
<ol type="1">
    @foreach(var question in ViewBag.Questions)
            {
                <li>
                    @question.Content
                    <ol type="a">
                        @foreach(var answer in question.Answer)
                        {
                            <li>
                                <input type="radio" name="question_@question.Id" value="@answer.Id" />
                                @answer.Content
                            </li>
                        }
                    </ol>
                </li>
            }
</ol>